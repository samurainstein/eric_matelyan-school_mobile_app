<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultButton">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="termLabel">
        <item name="android:textSize">34sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="termText">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="courseLabel">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="courseText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="addDate">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:hint">@string/add_date_hint</item>
    </style>
    <style name="courseSpinner">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="floatingActionButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>
    <style name="recyclerListItem">
        <item name="android:textSize">24sp</item>
        <item name="android:background">@color/slate4</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>