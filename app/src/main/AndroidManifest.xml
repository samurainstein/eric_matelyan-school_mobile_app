<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ericmatelyan_schoolmobileapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EricMatelyanSchoolMobileApp">
        <activity
            android:name=".UI.AddAssignmentActivity"
            android:exported="true"
            android:label="Add Assignment"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".UI.AssignmentDetailsActivity"/>
        <activity
            android:name=".UI.EditAssignmentActivity"
            android:exported="true"
            android:label="Edit Assignment"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".UI.AssignmentDetailsActivity" />
        <activity
            android:name=".UI.AssignmentDetailsActivity"
            android:exported="true"
            android:label="Assignment Details"
            android:parentActivityName=".UI.AssignmentsActivity" />
        <activity
            android:name=".UI.AddCourseActivity"
            android:exported="true"
            android:label="Add Course"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".UI.CoursesActivity" /> <!-- FIX THIS: Back Button Crashes.  Calling onCreate() again? -->
        <activity
            android:name=".UI.EditCourseActivity"
            android:exported="true"
            android:label="Edit Course"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".UI.CourseDetailsActivity" />
        <activity
            android:name=".UI.CourseDetailsActivity"
            android:exported="true"
            android:label="Course Details"
            android:parentActivityName=".UI.CoursesActivity" /> <!-- FIX THIS: Back Button Crashes.  Calling onCreate() again? -->
        <activity
            android:name=".UI.EditTermActivity"
            android:exported="true"
            android:label="Edit Term"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".UI.TermDetailsActivity" />
        <activity
            android:name=".UI.AddTermActivity"
            android:exported="true"
            android:label="Add Term"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".UI.TermsActivity" />
        <activity
            android:name=".UI.TermDetailsActivity"
            android:exported="true"
            android:label="Term Details"
            android:parentActivityName=".UI.TermsActivity" />
        <activity
            android:name=".UI.AssignmentsActivity"
            android:exported="true"
            android:label="Assignments"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.CoursesActivity"
            android:exported="true"
            android:label="Courses"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.TermsActivity"
            android:exported="true"
            android:label="Terms"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.MainActivity"
            android:exported="true"
            android:label="Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>