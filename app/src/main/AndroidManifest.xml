<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ericmatelyan_schoolmobileapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EricMatelyanSchoolMobileApp">
        <activity
            android:name=".UI.AddTermActivity"
            android:exported="true"
            android:label="Add Term"
            android:parentActivityName=".UI.TermsActivity"/>
        <activity
            android:name=".UI.TermsDetailActivity"
            android:exported="true"
            android:label="Term Details"
            android:parentActivityName=".UI.TermsActivity" />
        <activity
            android:name=".UI.AssignmentsActivity"
            android:exported="true"
            android:label="Assignments"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.CoursesActivity"
            android:exported="true"
            android:label="Courses"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.TermsActivity"
            android:exported="true"
            android:label="Terms"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.MainActivity"
            android:exported="true"
            android:label="Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>